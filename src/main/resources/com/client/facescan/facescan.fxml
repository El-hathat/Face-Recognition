<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="580.0" prefWidth="600.0" spacing="24.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.presentation.client.facescan.FaceScanController">
   <children>
      <Label text="Please position your face within the right frame">
         <styleClass>
            <String fx:value="lbl-info" />
            <String fx:value="lbl" />
         </styleClass>
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER" fillWidth="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-border-radius: 16; -fx-border-color: #0d6efd;" VBox.vgrow="ALWAYS">
         <children>
            <ImageView fx:id="imageView" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox fx:id="alertContainer" alignment="CENTER" spacing="10.0" styleClass="alert" visible="false">
         <children>
            <ProgressIndicator fx:id="alertSpinner" maxHeight="25.0" maxWidth="25.0" />
            <Text fx:id="alertMessage" styleClass="strong" text="Hello" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
</VBox>
