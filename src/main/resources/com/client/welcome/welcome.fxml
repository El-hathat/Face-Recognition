<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="42.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.presentation.client.welcome.WelcomeController">
    <children>
        <ImageView fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../images/app-logo.png"/>
            </image>
        </ImageView>
        <Button mnemonicParsing="false" onAction="#onActionLogin" onKeyPressed="#handleEnterKeyPress"
                text="S'authentifier">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="btn-primary"/>
                <String fx:value="btn-lg"/>
            </styleClass>
        </Button>
        <Text strokeType="OUTSIDE" strokeWidth="0.0"
              text="Cliquez sur le bouton pour commencer le processus de reconnaissance faciale."/>
    </children>
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
    </padding>
</VBox>
